@page "/table-inline"
@using TabBlazor.FluentValidation.Server.Validation

<Card>
    <CardHeader>
        <h3>TabBlazor.FluentValidation - Table Inline Edit</h3>
    </CardHeader>
    <CardBody>
        <Table Item="Person" Items="Persons" OnItemEdited="Submit" EditMode="TableEditMode.Inline">
            <Column Item="Person" Property="person => person.Name">
                <Template>@context.Name</Template>
                <EditorTemplate>
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <InputText class="form-control" @bind-Value="context.Name"></InputText>
                        <ValidationMessage For="(() => context.Name)"></ValidationMessage>
                    </div>
                </EditorTemplate>
            </Column>
            <Column Item="Person" Property="person => person.Age">
                <Template>@context.Age</Template>
                <EditorTemplate>
                    <div class="mb-3">
                        <label class="form-label">Age</label>
                        <InputNumber class="form-control" @bind-Value="context.Age"></InputNumber>
                        <ValidationMessage For="(() => context.Age)"></ValidationMessage>
                    </div>
                </EditorTemplate>
            </Column>
        </Table>
    </CardBody>
</Card>